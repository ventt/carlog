<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_margin="5dp"
    android:weightSum="8"
    android:background="@drawable/li_stroke"
    android:backgroundTint="@color/my_grey">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fuelingDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/ocean"
                android:layout_weight="1"
                android:text="@string/dd_mm_yyyy" />

            <TextView
                android:id="@+id/tripOdometer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/ocean"
                android:layout_weight="1"
                android:text="@string/odometer_km" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_weight="4"
            android:textColor="@color/ocean"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fuelingOdometer"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/ocean"
                android:text="@string/odometer_km" />

            <TextView
                android:id="@+id/fuelingQunatity"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/ocean"
                android:text="@string/quantity_l" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/fuelingConsumption"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/ocean"
            android:layout_weight="1"
            android:text=""/>
        <TextView
            android:id="@+id/literPerHundred"
            android:layout_width="match_parent"
            android:textColor="@color/ocean"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/l_100km"/>

    </LinearLayout>
    <ImageButton
        android:id="@+id/ibDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/trashbin"
        android:backgroundTint="@color/ocean"/>

</LinearLayout>