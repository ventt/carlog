<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_margin="5dp"
    android:background="@drawable/li_stroke"
    android:backgroundTint="@color/my_grey">
<TextView
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:id="@+id/tvServiceType"
    android:text="@string/service_type"
    android:textColor="@color/ocean"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="9"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/tvServiceOdometer"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:textColor="@color/ocean"
        android:text=""/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/tvServiceDate"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:textColor="@color/ocean"
        android:text=""/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:id="@+id/tvServiceOilChange"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:textColor="@color/ocean"
        android:text=""/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ocean"
        android:text=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/li_stroke">
        <TextView
            android:id="@+id/tvServiceDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ocean"
            android:padding="2dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibServiceDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/trashbin"
        android:backgroundTint="@color/ocean"/>
</LinearLayout>